{% extends "ErazrSiteBundle::layout.html.twig" %}

{% block title %}{{ parent() }}{% endblock %}

{% block content %}

<div class="ajout">
{{ render(controller("ErazrSiteBundle:Site:new")) }}
</div>

<div class="column-row">
{% for post in posts %}
	<div class="column-item">
		<div class="column-well">
			<article class="post post-split post-{{ post.color }}">
				<header class="clearfix">
					<a href="#" title="{{ post.user }}">
						<img src="{{asset('bundles/erazrsite/img/profil.png')}}" alt="KÃ©vin Desperries" title="{{ post.user }}" />
						<div class="profil">
							<h2>{{ post.user }}</h2>
							<h3 data-created="{{ post.created|date('Y/m/d H:i:s') }}">#</h3>
						</div>
					</a>
					<div class="timer">
						<span class="icon-clock"></span> <span data-countdown="{{ post.timer|date('Y/m/d H:i:s') }}">{{ "now"|date('H:i:s')}}</span>
					</div>
				</header>
				<div class="content">
					{{ post.content }}
				</div>
				<footer>
					<div class="row">
						<div class="col-sm-6">
							<a href="{{ path('_postView', {'id': post.id}) }}" class="btn btn-sm btn-post">Voir le post</a>
						</div>
						<div class="col-sm-6 text-right">
							<div href="#" data-toggle="tooltip" data-placement="top" title="02 commentaires"><span class="icon-comment-empty"></span> 02</div>
							<a href="#" data-toggle="tooltip" data-placement="top" title="Ajouter un like"><span class="icon-heart-empty"></span> {{ post.liked|number_format(0) }}</a>
						</div>
					</div>
				</footer>
			</article>
		</div>
	</div>
{% endfor %}
</div>
{% endblock %}