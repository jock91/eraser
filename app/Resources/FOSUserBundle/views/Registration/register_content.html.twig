<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
	<div id="fos_user_registration_form">
		<div class="row">
			<div class="col-sm-6">
				<div class="input-group">
					<span class="input-group-addon"><label for="fos_user_registration_form_username" class="icon-user control-label required"></label></span>
					{{ form_widget(form.username, {'attr': {'placeholder':"Nom d'utilisateur"}}) }}
				</div>
			</div>
			<div class="col-sm-6">
				<div class="input-group">
					<span class="input-group-addon"><label for="fos_user_registration_form_email" class="icon-mail control-label required"></label></span>
					{{ form_widget(form.email, {'attr': {'placeholder':'Adresse e-mail'}}) }}
				</div>
			</div>
			<div class="col-sm-6">
				<div class="input-group">
					<span class="input-group-addon"><label for="fos_user_registration_form_plainPassword_first" class="icon-lock control-label required"></label></span>
					{{ form_widget(form.plainPassword.first, {'attr': {'placeholder':'Mot de passe'}}) }}
				</div>
			</div>
			<div class="col-sm-6">
				<div class="input-group">
					<span class="input-group-addon"><label for="fos_user_registration_form_plainPassword_second" class="icon-lock control-label required"></label></span>
					{{ form_widget(form.plainPassword.second, {'attr': {'placeholder':'VÃ©rification du mot de passe'}}) }}
				</div>
			</div>
		</div>
		{{ form_rest(form) }}
		<button type="submit" class="btn btn-large btn-light-blue">Inscription</button>
	</div>
</form>