<h1 class="text-asphalt">Modifier mes informations</h1>

<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
	<div class="row">
		<div class="col-sm-6">
			{{ form_errors(form.username) }}
			<div class="input-group">
				<span class="input-group-addon"><label for="fos_user_profile_form_username" class="icon-user control-label required"></label></span>
				{{ form_widget(form.username) }}
			</div>
		</div>
		<div class="col-sm-6">
			{{ form_errors(form.email) }}
			<div class="input-group">
				<span class="input-group-addon"><label for="fos_user_profile_form_email" class="icon-mail control-label required"></label></span>
				{{ form_widget(form.email) }}
			</div>
		</div>
		<div class="col-sm-12 text-center">
			{{ form_errors(form.image.file) }}
		</div>
		<div class="col-sm-6 text-right">
			<label for="fos_user_profile_form_image_file" class="file">
				<img src="{{asset('bundles/erazrsite/image.php?h=100&w=100&src='~app.user.webPath)}}" title="{{ app.user.username }}" alt="{{ app.user.username }}" class="img-profil" />
			</label>
		</div>
		<div class="col-sm-6">
			<label for="fos_user_profile_form_image_file" class="file">
				<div class="file-text">Aucun fichier sélectionné</div>
				<div class="btn btn-light-blue">Choisir une image</div>
			</label>
		</div>
	</div>
	<div class="text-right">
		{{ form_widget(form.image.file) }}
		{{ form_rest(form) }}
		<button type="submit" class="btn btn-large btn-light-blue">Modifier mes informations</button>
	</div>
</form>