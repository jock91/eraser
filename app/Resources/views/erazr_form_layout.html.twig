{% extends "bootstrap_3_layout.html.twig" %}

{%- block form_label -%}
	{% set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' control-label')|trim}) %}
	{% if label is not sameas(false) -%}
		{% if not compound -%}
			{% set label_attr = label_attr|merge({'for': id}) %}
		{%- endif %}
		{% if required -%}
			{% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
		{%- endif %}
		{% if label is empty -%}
			{%- if label_format is not empty -%}
				{% set label = label_format|replace({
					'%name%': name,
					'%id%': id,
				}) %}
			{%- else -%}
				{% set label = name|humanize %}
			{%- endif -%}
		{%- endif -%}
		<span class="input-group-addon"><label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ label|trans({}, translation_domain) }}</label></span>
	{%- endif -%}
{%- endblock form_label -%}

{% block button_widget -%}
	{% set attr = attr|merge({class: (attr.class|default('') ~ ' btn-light-blue')|trim}) %}
	{{- parent() -}}
{%- endblock %}